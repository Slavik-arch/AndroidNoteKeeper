<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="editTextStyle">@style/RedGreenEditText</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RedGreenEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NoteTitle" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/it_centerPlum</item>
        <item name="android:textSize">@dimen/course_name_size_small</item>
    </style>

    <style name="BrandedText" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/itcenter</item>
    </style>

    <style name="BrandedText.CourseName">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrandedText.ModuleName">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AddFAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="srcCompat">@drawable/ic_add_white_24dp</item>
    </style>
</resources>
